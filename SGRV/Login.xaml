<Window x:Class="SGRV.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGRV"
        mc:Ignorable="d"
        Title="Login" Height="768" Width="1366">
    <Grid>
        <Label Content="Inicio de sesión" HorizontalAlignment="Center" Margin="0,102,0,0" VerticalAlignment="Top" Height="63" Width="284" FontSize="40"/>
        <TextBox HorizontalAlignment="Center" Margin="0,266,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Width="530" Height="70" FontSize="30" VerticalContentAlignment="Center"/>
        <Button x:Name="button_IniciarSesion" Content="Iniciar sesión" HorizontalAlignment="Center" Margin="0,596,0,0" VerticalAlignment="Top" Height="60" Width="200" Click="button_IniciarSesion_Click"/>
        <PasswordBox HorizontalAlignment="Center" Margin="0,422,0,0" VerticalAlignment="Top" Width="530" Height="70"/>

    </Grid>
</Window>
